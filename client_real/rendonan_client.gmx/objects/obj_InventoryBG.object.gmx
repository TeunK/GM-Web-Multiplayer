//{instance_destroy();}

if godown=1
{
    //going down, adapt rotation
    rotation-=3
    //rotation adaption completed
    if rotation &lt;= 0 {rotation=0;}//Can add sound Effect #1;; should be same moment as vheight &lt;=0 (see next step)
    vheight-=2
    if vheight &lt;=0 {vheight=0;}//Can add sound Effect #1;; should be same moment as hheight &gt;= 45 (see next step)
    
    //hheight adaption Part 1
    if hheight &gt;= 15 
    {
        hheight-=1.5; 
        slide_fx(0);  
    }//Can add sound Effect #1 [moving]
    
    //hheight adaption Part 2
    if hheight &lt; 15 &amp;&amp; hheight &gt;0 
    {
        hheight-=0.8
        slide_fx(0); 
    }//Can add sound Effect #2 [moving]
    
    //hheight adaption completed
    if hheight &lt;= 0 
    {
        hheight=0; godown=0; down=1
        slide_fx(1); 
    }//Can add sound Effect #3 [completed]
}


//Bugfix Set up and down to 0 when in movement
if goup=1 || godown=1
{up=0;down=0}

//Lock usemagic when inventory is up; so cant click magic skill when actually pressing an inventory icon
if down=1 &amp;&amp; global.usemagic&gt;=0 {global.usemagic=-1}

if goup=1
{
    //hheight return adaption Part 1
    if hheight &lt; 15 &amp;&amp; hheight &gt;=0 
    {
        hheight+=0.8
        slide_fx(0); 
    }//Can add sound Effect #2 [moving]
    
    //hheight return adaption Part 2
    if hheight &gt;=15 {hheight+=1.5; rotation+=3; vheight+=2; slide_fx(0);}//Can add sound Effect #1 [moving]
    if rotation &gt;= 90 {rotation=90}
    if vheight &gt;= 60 {vheight=60}
    if hheight &gt;= 60 {hheight=60;goup=0;up=1; slide_fx(1); }//Can add sound Effect #1 [completed]
}

